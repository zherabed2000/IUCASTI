<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:layout_margin="20dp">

   <EditText
       android:id="@+id/empnum_et"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:hint="Employee Email"
       />
    <EditText
        android:id="@+id/pass_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_below="@id/empnum_et"
        android:layout_marginTop="20dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/signin_btn"
        android:layout_below="@id/pass_et"
        android:layout_marginTop="20dp"
        android:text="Sign IN"
        android:textAllCaps="true"
        android:gravity="center"
        android:background="#6B88B3"
        android:textColor="#fff"/>
    <TextView
        android:id="@+id/forget_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forget Your Password ?"
        android:layout_below="@id/signin_btn"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal" />
    <TextView
        android:id="@+id/dhaveaccount_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dont have accout ? REgister"
        android:layout_below="@id/forget_tv"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        />
    <LinearLayout
        android:id="@+id/lineraimg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/ic_googleicon"

            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/ic_facebook"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/ic_twitter"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/ic_linkedin"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Or Sign in With ? "
        android:layout_above="@+id/lineraimg"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"/>


</RelativeLayout>